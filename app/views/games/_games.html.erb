<%= turbo_frame_tag "games" do %>
  <div class="table min-w-full divide-y divide-gray-200">
    <div class="table-header-group bg-gray-50">
      <div class="table-row">
        <div class="table-cell pl-4 py-3.5 w-1/8 text-sm font-normal text-left text-gray-500"></div>
        <div class="table-cell px-4 py-3.5 w-1/2 text-sm font-normal text-left text-gray-500"><%= t("home.table.title") %></div>
        <div class="table-cell px-4 py-3.5 w-1/4 text-sm font-normal text-left text-gray-500"><%= t("home.table.play_time") %></div>
        <div class="table-cell px-4 py-3.5 w-1/8 text-sm font-normal text-left text-gray-500"><%= t("home.table.play_count") %></div>
      </div>
    </div>

    <div class="table-row-group bg-white divide-y divide-gray-200">
      <% if games.any? %>
        <%= render games %>
      <% else %>
        <%= render "empty" %>
      <% end %>
    </div>
  </div>
<% end %>
