<dialog>
  <div class="fixed left-0 top-0 flex h-full w-full items-center justify-center bg-black bg-opacity-50 py-10">
    <div class="modal max-h-full w-full max-w-xl overflow-y-auto sm:rounded-xl bg-white">
      <div class="px-6 pt-6 pb-4 bg-gray-100 border-b border-gray-200 flex items-center justify-center gap-2">
        <h1 class="w-full text-2xl text-gray-800 font-medium" data-name></h1>
      </div>

      <div class="p-6 text-sm font-medium text-gray-800">
        <p><%= t("home.table.play_time") %>: <span class="font-normal text-gray-600" data-length></span></p>
        <p><%= t("home.table.play_count") %>: <span class="font-normal text-gray-600" data-players></span></p>
      </div>

      <div class="p-6 pt-0 text-sm font-medium text-gray-800 hidden" data-base-game-wrapper>
        <p><%= t("modal.base_game") %>: <span class="font-normal text-gray-600" data-base-game></span></p>
      </div>

      <div class="p-6 pt-0 text-sm font-medium text-gray-800 hidden" data-expansions-wrapper>
        <p><%= t("modal.expansions") %>: <span class="font-normal text-gray-600" data-expansions></span></p>
      </div>

      <div class="p-6 pt-0 text-sm font-normal">
        <p><a class="text-gray-600 hover:text-gray-700 active:text-gray-800 focus:outline-none" href="#" target="_blank" data-designer-url><span data-designer-name></span> <%= t("modal.designer") %></a></p>
        <p><a class="text-orange-500 hover:text-orange-600 active:text-orange-700 focus:outline-none" href="#" target="_blank" data-bgg-url><span data-bgg-name></span> <%= t("modal.bgg") %></a></p>
      </div>
    </div>
  </div>
</dialog>
